// -*- mode: jsonc -*-
{
    "height": 32, 
    "spacing": 1, 
    "modules-left": [
        "hyprland/workspaces",
	"custom/track"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "backlight",
        "power-profiles-daemon",
        "battery",
        "clock",
	"hyprland/language",
        "custom/power"
    ],
    "custom/track": {
        "format": "üéµ",
        "tooltip": true,
        "tooltip-format": "{}",
        "exec": "~/.config/waybar/now_playing.sh",
        "interval": 5
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶ Muted",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄß", "ÔÄ®", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "network": {
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Ôûñ {ipaddr}/{cidr}",
        "tooltip-format": "Ôûñ {ifname} via {gwaddr}({signalStrength}%)",
        "format-linked": "Ôûñ {ifname} (No IP)",
        "format-disconnected": "‚ö† Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "backlight": {
        "format": "ÔÜÖ {percent}%",
	"tooltip": true,
	"tooltip-format": "Brightless"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": " ÔÉß ",
            "performance": " ÔÉß ",
            "balanced": " Ôâé ",
            "power-saver": " ÔÅ¨ "
        }
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}% ",
        "format-full": "{icon} {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
	"calendar": {
	    "format": {
	        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
	    }
	}
    },

    "hyprland/language": {
        "format": "{}", 
	"format-en": "en",
	"format-ru": "ru"
    },
    "custom/power": {
        "format" : "‚èª",
	"tooltip": false,
	"menu": "on-click",
	"menu-file": "$HOME/.config/waybar/power_menu.xml",
	"menu-actions": {
	    "shutdown": "shutdown now",
	    "reboot": "reboot",
	    "suspend": "systemctl suspend"
	}
    }
}
